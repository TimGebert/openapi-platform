{
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "pretty": true,
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
        "src/*":  ["src/*"],
        "view/*": ["src/view/*"],
        "model/*": ["src/model/*"],
        "test/*": ["test/*"],
        "config/*": ["config/*"],
        "basic/*": ["src/view/basic/*"],
        "state/*": ["src/state/*"],
        "client/*": ["src/client/*"],
        "backend/*": ["src/backend/*"],
        "frontend/*": ["src/frontend/*"]
    }
  },
  "exclude": ["node_modules", "build", "dist"]
}
