{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "pretty": true,
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
        "src/*":  ["src/*"],
        "view/*": ["src/view/*"],
        "model/*": ["src/model/*"],
        "test/*": ["test/*"],
        "config/*": ["config/*"],
        "basic/*": ["src/view/basic/*"]
    },
  },
  "exclude": ["node_modules"]
}
